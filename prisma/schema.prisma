generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Cart {
  id       String     @id @default(cuid())
  userId   String     @unique
  CartItem CartItem[]

  @@index([id])
}

model CartItem {
  id        String  @id @default(cuid())
  productId String
  cart      Cart    @relation(fields: [cartId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
  cartId    String

  @@index([productId])
  @@index([cartId])
}

model Product {
  id            String     @id @default(cuid())
  name          String     @db.VarChar(32)
  description   String     @db.VarChar(255)
  price         Decimal    @db.Decimal(8, 2)
  priceOriginal Decimal    @db.Decimal(8, 2)
  currency      String     @default("Â£") @db.VarChar(3)
  imageId       String     @db.VarChar(32)
  CartItem      CartItem[]

  @@index([id])
}

model InstagramMedia {
  id         String              @id @unique
  caption    String?
  media_url  String
  timestamp  DateTime
  username   String
  media_type MediaType
  permalink  String
  children   InstagramChildren[]
}

model InstagramChildren {
  media_url        String
  id               String          @id
  media_type       MediaType
  InstagramMedia   InstagramMedia? @relation(fields: [instagramMediaId], references: [id])
  instagramMediaId String?
  @@index([instagramMediaId])
}


enum MediaType {
  IMAGE
  VIDEO
  CAROUSEL_ALBUM
}
